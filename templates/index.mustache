<!DOCTYPE html>
<html lang="en-us">
<head>
  <meta charset="utf-8">
  <title>{{SmartFinance360}}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=5">
  <meta name="author" content="Smart Finance 360">
  <meta name="robots" content="index, follow">
  <meta name="language" content="English">
  <meta name="rating" content="General">

  <!-- Primary SEO Meta Tags -->
  <meta name="title" content="{{Title}}">
  <meta name="description" content="{{MetaDescription}}">
  <meta name="keywords" content="{{MetaKeywords}}">
  <link rel="canonical" href="{{CanonicalURL}}">

  <!-- Open Graph / Facebook -->
  <meta property="og:title" content="{{MetaTitle}}">
  <meta property="og:description" content="{{MetaDescription}}">
  <meta property="og:image" content="{{OGImage}}">
  <meta property="og:url" content="{{CanonicalURL}}">
  <meta property="og:type" content="website">
  <meta property="og:site_name" content="Smart Finance 360">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{MetaTitle}}">
  <meta name="twitter:description" content="{{MetaDescription}}">
  <meta name="twitter:image" content="{{OGImage}}">
  <meta name="twitter:site" content="@SmartFinance360">

  <!-- Schema.org JSON-LD: WebSite -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "Smart Finance 360",
    "url": "https://smartfinance360.com/",
    "description": "{{MetaDescription}}",
    "publisher": {
      "@type": "Organization",
      "name": "Smart Finance 360",
      "logo": {
        "@type": "ImageObject",
        "url": "https://smartfinance360.com/images/logo.png"
      }
    },
    "potentialAction": {
      "@type": "SearchAction",
      "target": "https://smartfinance360.com/search.html?q={search_term_string}",
      "query-input": "required name=search_term_string"
    }
  }
  </script>

  <!-- Schema.org JSON-LD: BreadcrumbList -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "https://smartfinance360.com/"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "{{MetaTitle}}",
        "item": "{{CanonicalURL}}"
      }
    ]
  }
  </script>

  <!-- Favicon -->
  <link rel="shortcut icon" href="images/favicon.png" type="image/x-icon">
  <link rel="icon" href="images/favicon.png" type="image/x-icon">

  <!-- Google Fonts & CSS -->
  <link href="https://fonts.googleapis.com/css2?family=Neuton:wght@700&family=Work+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="plugins/bootstrap/bootstrap.min.css">
  <link rel="stylesheet" href="css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

  <!-- Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-276VFWZL9H"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-276VFWZL9H');
  </script>

  <!-- Google AdSense -->
  <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9846205135944521"
     crossorigin="anonymous"></script>
</head>

<body>

  <!-- Header -->
  {{> header}}

  <main>
    <section class="section">
      <div class="container">
        <div class="row">

          <!-- Main Content -->
          <div class="col-lg-8 mb-5 mb-lg-0">
            <div class="row">
              {{#articles}}
              <div class="col-md-6 mb-4">
                <article class="card">
                  <img src="{{ImageURL}}" class="card-img-top" alt="{{Title}}">
                  <div class="card-body">
                    <h5 class="card-title">
                      <a href="article.html?slug={{Slug}}">{{Title}}</a>
                    </h5>
                    <p class="card-text">{{Excerpt}}</p>
                    <div class="text-muted small">
                      {{DateTime}} · {{ReadTime}} min read · By {{Author}}
                    </div>
                    <a href="article.html?slug={{Slug}}" class="btn btn-sm btn-outline-primary mt-2">Read More</a>
                  </div>
                </article>
              </div>
              {{/articles}}
              {{^articles}}
              <p>No articles found.</p>
              {{/articles}}
            </div>
          </div>

          <!-- Sidebar -->
          <div class="col-lg-4">
            {{> sidebar}}
          </div>

        </div>
      </div>
    </section>
  </main>

  <!-- Footer -->
  {{> footer}}

  <!-- JS Plugins -->
  <script src="plugins/jquery/jquery.min.js"></script>
  <script src="plugins/bootstrap/bootstrap.min.js"></script>
  <script src="js/script.js"></script>

</body>
</html>
