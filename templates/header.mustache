<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{MetaTitle}} | {{siteName}}</title>
  <meta name="description" content="{{MetaDescription}}">
  {{{metaRobots}}}
  <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">
  <link rel="icon" href="/images/favicon.png" type="image/x-icon">

  <!-- Bootstrap CSS via CDN -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

  <!-- Inline CSS -->
  <style>
    /* ---------- Navbar ---------- */
    header.navigation {
      position: fixed;
      width: 100%;
      top: 0;
      left: 0;
      background: rgba(26, 31, 54, 0.95); /* deep navy */
      transition: all 0.3s ease;
      z-index: 1050;
      height: 70px;
      padding: 0;
    }

    header.navigation.sticky {
      background: rgba(26, 31, 54, 1);
      box-shadow: 0 4px 15px rgba(0,0,0,0.15);
      height: 60px;
    }

    header.navigation.sticky .navbar-brand img {
      height: 40px;
    }

    .navbar-nav .nav-link {
      color: #f8f9fa;
      font-weight: 500;
      padding: 10px 18px;
      text-transform: uppercase;
      transition: all 0.3s ease;
      position: relative;
    }

    .navbar-nav .nav-link:hover,
    .navbar-nav .nav-link.active {
      color: #ffcd00;
    }

    .navbar-nav .nav-link::after {
      content: '';
      position: absolute;
      width: 0;
      height: 2px;
      bottom: 0;
      left: 50%;
      background-color: #ffcd00;
      transition: all 0.3s ease;
      transform: translateX(-50%);
    }

    .navbar-nav .nav-link:hover::after,
    .navbar-nav .nav-link.active::after {
      width: 60%;
    }

    .search input {
      border-radius: 15px;
      border: none;
      padding: 4px 12px;
      height: 30px;
      width: 150px;
      background-color: #fff;
      font-size: 14px;
      transition: all 0.3s ease;
    }

    .navbar-brand img {
      height: 55px;
      filter: drop-shadow(0 0 4px rgba(0,0,0,0.5));
      transition: all 0.3s ease;
      background-color: #fff;
    }

    .navbar-dark .navbar-nav .nav-link {
      color: rgba(255, 255, 255, 0.9);
    }

    @media (max-width: 991px) {
      .navigation .navbar-nav {
        background-color: #896e6e !important;
        padding: 15px 0;
        border-radius: 0;
      }
    }

    .search input:focus {
      width: 220px;
      box-shadow: 0 0 6px rgba(255, 205, 0, 0.5);
      outline: none;
    }

    body { padding-top: 80px; }

    .navbar-toggler {
      border: none;
    }

    .navbar-toggler-icon {
      background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba%28255, 205, 0, 1%29' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
    }

    @media (max-width: 768px) {
      .search input { width: 100px; }
    }
    @media (max-width: 480px) {
      .navbar-brand img { height: 35px; }
      .search input { width: 80px; }
    }
  </style>

  <!-- Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-276VFWZL9H"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-276VFWZL9H');
  </script>

  <!-- Adsense -->
  <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9846205135944521" crossorigin="anonymous"></script>

</head>
<body>

<header class="navigation shadow-sm">
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-dark px-0 py-2">

      <!-- Logo / Brand -->
    <a class="navbar-brand d-flex align-items-center" href="{{root}}index.html">
  <img src="{{logoURL}}" alt="{{siteName}} Logo">
</a>


      <!-- Toggler -->
      <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Menu -->
      <div class="collapse navbar-collapse" id="navigation">
        <ul class="navbar-nav mx-auto">
          <li class="nav-item"><a class="nav-link {{#isActiveHome}}active{{/isActiveHome}}" href="{{root}}index.html">Home</a></li>
          <li class="nav-item"><a class="nav-link {{#isActiveFinance}}active{{/isActiveFinance}}" href="{{root}}finance.html">Finance</a></li>
          <li class="nav-item"><a class="nav-link {{#isActiveInvestment}}active{{/isActiveInvestment}}" href="{{root}}investment.html">Investment</a></li>
          <li class="nav-item"><a class="nav-link {{#isActiveSports}}active{{/isActiveSports}}" href="{{root}}sports.html">Sports</a></li>
          <li class="nav-item"><a class="nav-link {{#isActiveTechnology}}active{{/isActiveTechnology}}" href="{{root}}technology.html">Technology</a></li>
          <li class="nav-item"><a class="nav-link {{#isActiveBusiness}}active{{/isActiveBusiness}}" href="{{root}}business.html">Business</a></li>
          <li class="nav-item"><a class="nav-link {{#isActiveMotivational}}active{{/isActiveMotivational}}" href="{{root}}motivational.html">Motivational</a></li>
          <li class="nav-item"><a class="nav-link {{#isActiveContact}}active{{/isActiveContact}}" href="{{root}}contact.html">Contact</a></li>
        </ul>

        <!-- Search -->
        <form class="search d-none d-md-block ml-lg-3">
          <input type="search" placeholder="Search..." autocomplete="off">
        </form>
      </div>
    </nav>
  </div>
</header>

<!-- Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

<!-- Sticky Header Script -->
<script>
  window.addEventListener("scroll", function() {
    const header = document.querySelector("header.navigation");
    header.classList.toggle("sticky", window.scrollY > 50);
  });

  // Highlight active nav
  let currentPath = window.location.pathname.split("/").pop();
  if (currentPath === "") currentPath = "index.html";
  const navLinks = document.querySelectorAll('.navbar-nav .nav-link');
  navLinks.forEach(link => {
    if (link.getAttribute('href') === currentPath) {
      link.classList.add('active');
    } else {
      link.classList.remove('active');
    }
  });
</script>
